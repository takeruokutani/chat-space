.main-chat
  .group-info
    .left
      - current_user.groups.each do |group|
        .left__current-group
          = group.name
        .left__member-list
          = group.name
    = link_to edit_group_path(current_user), class: "right-edit" do
      .group-info__right-edit__edit-btn
        Edit
  
  .message-list
    .messages
      = render @messages
  
  .message-form
    = form_for [@group, @message] do |f|
      = f.text_field :content, class: 'message-form__form', placeholder: 'type a message'
      .message-form__form__input-box
        = f.label :image, class: 'message-form__form__input-box__image' do
          = icon('fas', 'image', class: 'icon')
          = f.file_field :image, class: 'message-form__form__input-box__image__file'
      = f.submit 'Send', class: 'message-form__form__submit-btn'